<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/activity_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.chart.ChartunActivity"
    android:background="@color/whiteGray">

    <TextView
        android:id="@+id/TVfx"
        android:layout_width="180dp"
        android:layout_height="60dp"

        android:layout_marginTop="20dp"
        android:layout_marginLeft="10dp"
        android:padding="8dp"
        android:textStyle="bold"
        android:textSize="@dimen/activity_vertical_margin"
        android:background="@color/white"
        />

    <TextView
        android:id="@+id/TVPie"
        android:layout_width="270dp"
        android:layout_height="62dp"

        android:layout_marginTop="20dp"
        android:layout_marginLeft="770dp"
        android:padding="7dp"
        android:textStyle="bold"
        android:textSize="@dimen/activity_vertical_margin"
        android:background="@color/white"
        />
    <Spinner
        android:id="@+id/Sfx"
        android:layout_width="180dp"
        android:layout_height="50dp"
        android:layout_marginTop="100dp"
        android:layout_marginLeft="10dp"
        android:background="@color/whiteGray"
        android:animateLayoutChanges="true"
        />
    <Button
        android:id="@+id/show"
        android:layout_width="120dp"
        android:layout_height="50dp"
        android:layout_marginLeft="230dp"
        android:layout_marginTop="100dp"
        android:text="Show"
        android:background="@drawable/ic_launcher_foreground"
        />
    <Button
        android:id="@+id/showPie"
        android:layout_width="120dp"
        android:layout_height="50dp"
        android:layout_marginLeft="770dp"
        android:layout_marginTop="100dp"
        android:text="Pie_Chart"
        android:background="@drawable/ic_launcher_foreground" />



    <org.eazegraph.lib.charts.PieChart
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:id="@+id/piechart"
        android:layout_width="420dp"
        android:layout_height="420dp"
        android:layout_marginLeft="750dp"
        android:layout_marginTop="210dp"
        android:padding="8dp"
        app:egLegendTextSize="18sp"
        app:egUseInnerValue="true"
        app:egUseInnerPadding="true"
        app:egInnerPaddingColor="@color/whiteGray"
        app:egInnerValueColor="@color/ap_white"
        />
</RelativeLayout>

